@using CourseSeller.Core.Convertors
@using CourseSeller.Core.DTOs.UserPanel
@using CourseSeller.Core.Services.Interfaces
@inject IUserPanelService _UserPanelService

@{
    SideBarViewModel viewModel = await _UserPanelService.GetSideBarData(User.Identity.Name);
}

<div class="col-md-3 col-sm-4 col-xs-12">
    <aside>

        <div class="avatar-layer">
            <div class="img-layer">
                <a href="#" class="change-image"><i class="zmdi zmdi-edit"></i></a>
                <img src="/UserAvatars/@viewModel.ImageName">
            </div>
            <div class="detail">
                <span> @viewModel.UserName </span>
                <span> عضویت : @viewModel.RegisterDateTime.ToShamsi() </span>
            </div>
        </div>

        <section>
            <header><h3> میز کار </h3></header>
            <div class="inner">
                <ul>
                    <li><a asp-area="UserPanel" asp-controller="" asp-action=""> مشاهده حساب کابری </a></li>
                    <li><a asp-area="" asp-controller="" asp-action=""> ویرایش حساب کابری </a></li>
                    <li><a asp-area="" asp-controller="" asp-action=""> تغییر رمز عبور </a></li>
                    <li><a asp-area="" asp-controller="" asp-action=""> تنظیمات حساب کاربری </a></li>
                    <li>
                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="btn-link text-danger" id="mybtn"> خروج از حساب کاربری </button>
                        </form>
                    </li>
                </ul>
            </div>
        </section>
    </aside>
</div>
